<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_aarde_titel"
            android:textSize="30sp" />

        <!-- TODO: check textview textsize and other properties (see HF Android p.202) -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_margin"
            android:src="@drawable/plan_aarde2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plan_aarde"
            android:textSize="14.5sp"
            android:layout_marginTop="@dimen/activity_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:src="@drawable/sonde_aarde"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stand_aarde_titel"
            android:layout_marginTop="@dimen/activity_margin"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_margin"
            android:src="@drawable/stand_aarde" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stand_aarde"
            android:textSize="12.5sp"
            android:layout_marginTop="@dimen/activity_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>